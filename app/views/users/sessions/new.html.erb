<div class="container">

  <div class="form">

    <h2 class=form__header>Sign In</h2>
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form__field">
        <%= f.label :email, class: "form__label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input" %>
      </div>
  
      <div class="field form__field">
        <%= f.label :password, class: "form__label" %>t-password", class: "form__input" %>
      </div>
  
      <div class="actions">
        <%= f.submit "Log in", class: "form__submit btn btn-ghost" %>
      </div>
    <% end %>
  
    <div class="form__login-redirect">
      <p>Don't have an account? <%= link_to "Register", new_user_registration_path, class: "form__login-redirect__link" %></p>
    </div>
  </div>
</div>
